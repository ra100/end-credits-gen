{
  "name": "@ra100-ecg/cli",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "typings": "dist/cli.d.ts",
  "eports": [
    "dist/*.js"
  ],
  "type": "commonjs",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc -b",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "./dist"
      ],
      "clean": "if-file-deleted",
      "depencencies": [
        "../svg:build"
      ]
    },
    "start": {
      "command": "node dist/cli.js",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "jest",
      "files": [
        "src/**/*.ts"
      ]
    }
  },
  "author": "ra100",
  "license": "GNU LGPLv3",
  "dependencies": {
    "@ra100-ecg/svg": "^1.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "22.7.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
