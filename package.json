{
  "name": "ecg",
  "private": true,
  "workspaces": [
    "cdk",
    "svg",
    "cli",
    "png",
    "result"
  ],
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "wireit",
    "clean": "wireit",
    "lint": "wireit",
    "test": "wireit",
    "test:cdk": "wireit",
    "test:svg": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc -b",
      "dependencies": [
        "./svg:build",
        "./cli:build",
        "./png:build"
      ]
    },
    "clean": {
      "command": "rimraf */dist */tsconfig.tsbuildinfo"
    },
    "lint": {
      "command": "eslint --ext mjs --ext ts ."
    },
    "test": {
      "command": "echo 'tests done'",
      "dependencies": [
        "test:cdk",
        "test:svg"
      ]
    },
    "test:cdk": {
      "command": "npm --workspace=cdk run test"
    },
    "test:svg": {
      "command": "npm --workspace=svg run test"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5",
    "wireit": "^0.9.5"
  }
}
